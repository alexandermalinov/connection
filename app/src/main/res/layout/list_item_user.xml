<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.connection.vo.people.PeopleListItemUiModel" />

        <import type="com.connection.R" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_people"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/padding_medium">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:defaultGlideRes="@{R.drawable.ic_profile_picture}"
            app:glideRes="@{model.profilePicture}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceCornerSizeFifty"
            tools:src="@drawable/ic_profile_picture" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{model.name}"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/image_avatar"
            app:layout_constraintTop_toTopOf="@+id/image_avatar"
            tools:text="Alice Henry" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/container_other_people"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/view2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/text_name"
            app:layout_constraintTop_toBottomOf="@+id/text_name">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_other_user_one"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="1dp"
                app:defaultGlideRes="@{R.drawable.ic_profile_picture}"
                app:glideRes="@{model.otherPeoplePictures[0]}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceCornerSizeFifty"
                app:strokeWidth="2dp"
                app:strokeColor="@color/white"
                tools:src="@drawable/ic_profile_picture" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_other_user_two"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="-10dp"
                android:padding="1dp"
                app:defaultGlideRes="@{R.drawable.ic_profile_picture}"
                app:glideRes="@{model.otherPeoplePictures[0]}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceCornerSizeFifty"
                app:strokeWidth="2dp"
                app:strokeColor="@color/white"
                tools:src="@drawable/ic_profile_picture" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_other_user_three"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="-10dp"
                android:padding="1dp"
                app:defaultGlideRes="@{R.drawable.ic_profile_picture}"
                app:glideRes="@{model.otherPeoplePictures[0]}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceCornerSizeFifty"
                app:strokeWidth="2dp"
                app:strokeColor="@color/white"
                tools:src="@drawable/ic_profile_picture" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_other_user_four"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="-10dp"
                android:padding="1dp"
                app:defaultGlideRes="@{R.drawable.ic_profile_picture}"
                app:glideRes="@{model.otherPeoplePictures[0]}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceCornerSizeFifty"
                app:strokeWidth="2dp"
                app:strokeColor="@color/white"
                tools:src="@drawable/ic_profile_picture" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_tiny"
                android:padding="1dp"
                tools:text="connected with and 4 others"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#27000000"
            app:layout_constraintStart_toStartOf="@+id/text_name"
            app:layout_constraintTop_toBottomOf="@id/image_avatar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>